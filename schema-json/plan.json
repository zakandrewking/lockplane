{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lockplane.dev/plan.json",
  "title": "Lockplane Migration Plan",
  "description": "Defines a migration plan with a series of SQL steps",
  "type": "object",
  "required": ["steps"],
  "properties": {
    "source_hash": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$",
      "description": "SHA-256 hash of the source database schema. Used to verify the plan is being applied to the correct database state."
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/PlanStep"
      },
      "description": "List of migration steps"
    }
  },
  "definitions": {
    "PlanStep": {
      "type": "object",
      "required": ["description", "sql"],
      "properties": {
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable description of what this step does"
        },
        "sql": {
          "type": "string",
          "minLength": 1,
          "description": "SQL statement to execute"
        }
      }
    }
  }
}
